<Window x:Class="YetAnotherNote.singleLine"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YetAnotherNote"
        mc:Ignorable="d"
        Title="singleLine" Height="100" Width="200"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="False"
        WindowStyle="None"
        >
    <Grid>
        <Border BorderBrush="Red" Background="Black" BorderThickness="2px"/>
        <TextBlock Name="Title" Text="Create New Folder" Width="200" FontSize="15" Foreground="white" TextAlignment="Center" Margin="0,10,0,0"/>
        <TextBox Name="TextLine" Height="20" Width="180px"/>
        <Button Name="ApplyButton" Width="60" Height="20" Content="Apply" FontSize="13" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="20,10" Click="ApplyButtonClick"/>
        <Button Width="60" Height="20" Content="Cancel" FontSize="13" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="20,10" Click="CloseWindow"/>
    </Grid>
</Window>
