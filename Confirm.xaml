<Window x:Class="YetAnotherNote.Confirm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YetAnotherNote"
        mc:Ignorable="d"
        Title="Confirm" Height="100" Width="200"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="False"
        WindowStyle="None"
        >
    <Grid>
        <Border BorderBrush="Red" Background="Black" BorderThickness="2px"/>
        <TextBlock Name="Title" Text="Are you sure you want to delete " TextWrapping="Wrap" Width="200" FontSize="13" Foreground="white" TextAlignment="Center" Margin="0,10,0,0"/>
        <Button Focusable="True" Name="ApplyButton" Width="60" Height="20" Content="Yes" FontSize="13" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="20,10" Click="ApplyButtonClick" GotFocus="ApplyButton_GotFocus" LostFocus="ApplyButton_LostFocus"/>
        <Button Name="NO" Focusable="True" Width="60" Height="20" Content="No" FontSize="13" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="20,10" Click="CloseWindow" GotFocus="ApplyButton_GotFocus" LostFocus="ApplyButton_LostFocus"/>
    </Grid>
</Window>
